{
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ], 
    "outDir": "lib", 
    "removeComments": true, 
    "target": "ES6", 

    "baseUrl": "./", 
    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "paths": {}, 

    "sourceMap": true,
    "sourceRoot": "/", 

    "alwaysStrict": true, 
    "allowUnreachableCode": false, 

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
  }
}