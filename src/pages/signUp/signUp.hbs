<main class="registerWrapper">
    <form class="registerContainer">
        <h3>Регистрация</h3>
        <div class="field">
            <label for="email">Почта</label>
            <input type="text" id="email" name="email" pattern='([A-zА-я])+([0-9\-_\+\.])*([A-zА-я0-9\-_\+\.])*@([A-zА-я])+([0-9\-_\+\.])*([A-zА-я0-9\-_\+\.])*[\.]([A-zА-я])+'/>
        </div>
        <div class="field">
            <label for="login">Логин</label>
            <input type="text" id="login" name="login" pattern='/^[a-zA-Z0-9]+$/'/>
        </div>
        <div class="field">
            <label for="first_name">Имя</label>
            <input type="text" id="first_name" name="first_name" pattern="^[?!,.а-яА-ЯёЁв\s]+$"/>
        </div>
        <div class="field">
            <label for="second_name">Фамилия</label>
            <input type="text" id="second_name" name="second_name" pattern="^[?!,.а-яА-ЯёЁв\s]+$"/>
        </div>
        <div class="field">
            <label for="phone">Телефон</label>
            <input type="text" id="phone" name="phone" pattern="^(\+7|7|8)?[\s\-]?\(?[489][0-9]{2}\)?[\s\-]?[0-9]{3}[\s\-]?[0-9]{2}[\s\-]?[0-9]{2}$"/>
        </div>
        <div class="field">
            <label for="password">Пароль</label>
            <input type="password" id="password" name="password" pattern="/^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{6,16}$/"/>
        </div>
        <div class="field">
            <label for="passwordAgain">Пароль (еще раз)</label>
            <input type="password" id="passwordAgain" name="passwordAgain"/>
        </div>
        {{{inputSubmit}}}
        <a>Войти</a>
    </form>
</main>
